<style>
    div{
        background-color: black;
        width:100px;
        height:100px;
        transition: 1s;
    }
    .widthmax
    {
        width:900px;
    }
</style>

<div id="box" class="widthmax"></div>
<button onclick="change()">Change</button>
<script>
    var box=document.getElementById("box")
    function change()
    {
        box.style.backgroundColor="green"
        box.setAttribute("class","widthmax")
    }
</script>
